<link rel="stylesheet" href="../../CSS/signin.css" />
<main class="main-content">
  <script>
    {{#if error}}
      alert("{{error}}");
    {{/if}}

    {{#if success}}
      alert("{{success}}");
    {{/if}}
  </script>

  <div class="login-box">

    <div class="tab-menu">
      <button class="tab-button active" data-tab="login">ĐĂNG NHẬP</button>
      <button class="tab-button" data-tab="register">ĐĂNG KÝ</button>
    </div>

    <div id="login" class="tab-content active">
      <form method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="text"
            id="email"
            name="username"
            placeholder="Email"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Mật khẩu</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Mật khẩu"
            required
          />
        </div>

        <a href="#" class="forgot-link">Quên mật khẩu?</a>

        <div class="captcha-group">
          <div class="captcha-image" id="captcha-display">AbC7Y</div>
          <button
            type="button"
            class="captcha-refresh"
            id="captcha-refresh-btn"
          >
            &#8635;
          </button>
          <input
            type="text"
            name="captchaLoginInput"
            placeholder="Nhập mã xác thực"
            class="captcha-input"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">
          ĐĂNG NHẬP TÀI KHOẢN
        </button>

        <button type="button" class="btn btn-secondary">
          ĐĂNG NHẬP BẰNG FACEBOOK
        </button>
      </form>
    </div>

    <div id="register" class="tab-content" style="display: none;">
      <form class="registration-form" method="POST" action="/register">
        <div class="form-row">
          <div class="form-group half-width">
            <label for="reg-name">Họ tên</label>
            <input
              type="text"
              id="reg-name"
              name="name"
              placeholder="Họ tên"
              required
            />
          </div>
          <div class="form-group half-width">
            <label for="reg-email">Email</label>
            <input
              type="text"
              id="reg-email"
              name="email"
              placeholder="email"
              required
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group half-width">
            <label for="reg-pass">Mật khẩu</label>
            <input
              type="password"
              id="reg-pass"
              name="password"
              placeholder="Mật khẩu"
              required
            />
          </div>
          <div class="form-group half-width">
            <label for="reg-confirm-pass">Xác nhận mật khẩu</label>
            <input
              type="password"
              id="reg-confirm-pass"
              name="confirmPassword"
              placeholder="Xác nhận mật khẩu"
              required
            />
          </div>
        </div>

        <div class="form-row">
          <div class="form-group half-width">
            <label>Ngày sinh</label>
            <div class="date-group">
              <select class="date-select" id="reg-day" name="day">
                <option value="">Ngày sinh</option>
              </select>
              <select class="date-select" id="reg-month" name="month">
                <option value="">Tháng sinh</option>
              </select>
              <select class="date-select" id="reg-year" name="year">
                <option value="">Năm sinh</option>
              </select>
            </div>
          </div>
          <div class="form-group half-width">
            <label>Giới tính</label>
            <select id="reg-gender" name="gender" class="date-select">
              <option value="">Giới tính</option>
              <option value="male">Nam</option>
              <option value="female">Nữ</option>
              <option value="other">Khác</option>
            </select>
          </div>
        </div>

        <div class="form-group">
          <label for="reg-phone">Số điện thoại</label>
          <input
            type="tel"
            id="reg-phone"
            name="phone"
            placeholder="Số điện thoại"
            required
          />
        </div>

        <div class="captcha-group">
          <div class="captcha-image" id="reg-captcha-display">11147</div>
          <button
            type="button"
            class="captcha-refresh"
            id="reg-captcha-refresh-btn"
          >
            &#8635;
          </button>
          <input
            type="text"
            name="captchaInput"
            placeholder="Mã xác thực"
            class="captcha-input"
            required
          />
        </div>

        <div class="form-group terms-checkbox">
          <input type="checkbox" id="terms" name="terms" required />
          <label
            for="terms"
            style="display: inline; font-size: 0.9em; color: #666;"
          >
            Tôi cam kết tuân theo các chính sách bảo mật và điều khoản sử dụng
            của NPT Cinemas.
          </label>
        </div>

        <button type="submit" class="btn btn-primary" style="margin-top: 15px;">
          ĐĂNG KÝ
        </button>

        <button
          type="button"
          class="btn btn-secondary"
          style="background-color: #4267B2;"
        >
          TIẾP TỤC VỚI FACEBOOK
        </button>
      </form>
    </div>

  </div>
</main>
<script src="../../JS/signin.js">

</script>

