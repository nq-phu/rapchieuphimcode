<main>
  {{! views/movies.hbs }}

  <style>
    /* CSS cơ bản cho bảng */ table { width: 100%; border-collapse: collapse;
    margin-top: 20px; } th, td { border: 1px solid #ddd; padding: 8px;
    text-align: left; font-size: 14px; } th { background-color: #f2f2f2; }
    .delete-btn { background-color: #f44336; color: white; border: none;
    padding: 5px 10px; cursor: pointer; border-radius: 4px; transition:
    background-color 0.3s; } .delete-btn:hover { background-color: #d32f2f; }
  </style>

  <h1>{{pageTitle}}</h1>

  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Tên Phim</th>
        <th>Thể Loại</th>
        <th>Đạo Diễn</th>
        <th>Thời Lượng</th>
        <th>Ngày KC</th>
        <th>**Thao Tác**</th>
      </tr>
    </thead>
    <tbody>
      {{#each movies}}
        {{! Dùng 'id' là khóa chính của SQL Server để định danh dòng }}
        <tr id="movie-row-{{this.id}}">
          <td>{{this.id}}</td>
          <td>{{this.tenphim}}</td>
          <td>{{this.theloai}}</td>
          <td>{{this.daodien}}</td>
          <td>{{this.thoiluong}} phút</td>
          <td>{{this.ngayKhoiChieu}}</td>
          {{! Cần format date nếu cần }}
          <td>
            {{! Nút Xóa: data-id chứa ID của phim }}
            <button
              class="delete-btn"
              data-id="{{this.id}}"
              data-name="{{this.tenphim}}"
            >
              Xóa
            </button>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  {{! Nhúng file JavaScript client-side để xử lý sự kiện xóa }}
  <script src="../../JS/xoaPhim.js"></script>
</main>